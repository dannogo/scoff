<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >

    <TextView
        android:id="@+id/recordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="undefined"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.80"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/product_denomination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Roll"
            android:textStyle="bold"
            android:textColor="#00897B"
            />

        <LinearLayout
            android:id="@+id/product_energy_value_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_proteins"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="wrap_content"
                android:text="val"
                android:textColor="#00897B"
                />
            <TextView
                android:id="@+id/product_fats"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="wrap_content"
                android:text="val"
                android:textColor="#00897B"
                />

            <TextView
                android:id="@+id/product_carbohydrates"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="wrap_content"
                android:text="val"
                android:textColor="#00897B"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/current_product_total"
        android:layout_width="0dp"
        android:layout_weight="0.20"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100g"
            />
        <TextView
            android:id="@+id/product_calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="val"
            android:textStyle="bold"
            android:textColor="#00897B"
            />

    </LinearLayout>


</LinearLayout>