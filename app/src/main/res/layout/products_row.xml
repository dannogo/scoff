<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="#FFF8E1"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.85"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/scoff_denomination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Roll"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/scoff_energy_value_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoff_proteins"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:text="5"
                />
            <TextView
                android:id="@+id/scoff_fats"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:text="3"
                />

            <TextView
                android:id="@+id/scoff_carbohydrates"
                android:layout_width="0dp"
                android:layout_weight=".34"
                android:layout_height="wrap_content"
                android:text="170"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/current_scoff_total"
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scoff_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100g"
            />
        <TextView
            android:id="@+id/scoff_calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="250"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>